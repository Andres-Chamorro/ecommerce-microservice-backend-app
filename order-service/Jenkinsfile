// Updated: 2025-10-31 15:31
pipeline {
    agent any
    
    environment {
        // Java Configuration
        JAVA_HOME = '/usr/lib/jvm/java-17-openjdk-amd64'
        PATH = "/root/google-cloud-sdk/bin:${JAVA_HOME}/bin:${env.PATH}"
        
        // Service Configuration
        SERVICE_NAME = 'order-service'
        SERVICE_PORT = '8300'
        
        // Build Configuration
        MAVEN_OPTS = '-Xmx2048m'
        BUILD_TAG = "${env.BUILD_NUMBER}"
        
        // Docker - Local para Minikube y Registry
        IMAGE_NAME = "${SERVICE_NAME}"
        DOCKER_REGISTRY = 'us-central1-docker.pkg.dev/ecommerce-microservices-476519/ecommerce-registry'
        REGISTRY_IMAGE = "${DOCKER_REGISTRY}/${SERVICE_NAME}"
        
        // Minikube Configuration
        K8S_NAMESPACE = 'ecommerce-dev'
    }
    
    parameters {
        booleanParam(
            name: 'SKIP_TESTS',
            defaultValue: false,
            description: 'Saltar pruebas unitarias e integraciÃƒÆ’Ã‚Â³n'
        )
        booleanParam(
            name: 'SKIP_DEPLOY',
            defaultValue: false,
            description: 'Saltar despliegue en Minikube'
        )
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo "ÃƒÂ°Ã…Â¸Ã¢â‚¬Å“Ã¢â‚¬Å¾ [DEV] Clonando repositorio de ${SERVICE_NAME}..."
                checkout scm
            }
        }
        
        stage('Build Maven') {
            steps {
                script {
                    echo "ÃƒÂ°Ã…Â¸Ã¢â‚¬ÂÃ‚Â¨ [DEV] Compilando ${SERVICE_NAME} con Maven..."
                    dir('order-service') {
                        sh 'mvn clean package -DskipTests'
                    }
                }
            }
        }
        
        stage('Unit Tests') {
            when {
                expression { params.SKIP_TESTS == false }
            }
            steps {
                script {
                    echo "ÃƒÂ°Ã…Â¸Ã‚Â§Ã‚Âª [DEV] Ejecutando pruebas unitarias de ${SERVICE_NAME}..."
                    dir('order-service') {
                        sh 'mvn test -Dtest=*ServiceTest,*ResourceTest'
                    }
                }
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults: 'order-service/target/surefire-reports/*.xml'
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo "ÃƒÂ°Ã…Â¸Ã‚ÂÃ‚Â³ [DEV] Construyendo imagen Docker de ${SERVICE_NAME}..."
                    sh """
                        # Construir directamente en el Docker de Minikube
                        eval \$(minikube -p minikube docker-env)
                        
                        cd order-service
                        docker build -t ${IMAGE_NAME}:dev-${BUILD_TAG} .
                        docker tag ${IMAGE_NAME}:dev-${BUILD_TAG} ${IMAGE_NAME}:dev-latest
                        cd ..
                        
                        echo "Imagen construida directamente en Minikube: ${IMAGE_NAME}:dev-${BUILD_TAG}"
                    """
                }
            }
        }
        

        stage('Deploy to Minikube') {
            when {
                expression { params.SKIP_DEPLOY == false }
            }
            steps {
                script {
                    echo "ÃƒÂ¢Ã‹Å“Ã‚Â¸ÃƒÂ¯Ã‚Â¸Ã‚Â [DEV] Desplegando ${SERVICE_NAME} en Minikube..."
                    
                    sh """
                        # Configurar KUBECONFIG explícitamente
                        export KUBECONFIG=/var/jenkins_home/.kube/config
                        
                        # Configurar servidor de Minikube
                        kubectl config set-cluster minikube --server=https://192.168.67.2:8443 --insecure-skip-tls-verify=true
                        
                        # Cambiar contexto a Minikube
                        kubectl config use-context minikube
                        
                        # Verificar conexiÃ³n
                        kubectl cluster-info
                        
                        # Crear namespace si no existe
                        kubectl create namespace ${K8S_NAMESPACE} --dry-run=client -o yaml | kubectl apply -f -
                        
                        # Crear deployment temporal para dev
                        cat <<EOF | kubectl apply -f -
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${SERVICE_NAME}
  namespace: ${K8S_NAMESPACE}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ${SERVICE_NAME}
  template:
    metadata:
      labels:
        app: ${SERVICE_NAME}
    spec:
      containers:
      - name: ${SERVICE_NAME}
        image: ${IMAGE_NAME}:dev-${BUILD_TAG}
        ports:
        - containerPort: ${SERVICE_PORT}
        imagePullPolicy: Never
        env:
        - name: SPRING_PROFILES_ACTIVE
          value: "dev"
---
apiVersion: v1
kind: Service
metadata:
  name: ${SERVICE_NAME}
  namespace: ${K8S_NAMESPACE}
spec:
  selector:
    app: ${SERVICE_NAME}
  ports:
  - port: ${SERVICE_PORT}
    targetPort: ${SERVICE_PORT}
  type: ClusterIP
EOF
                        
                        # Esperar a que el deployment estÃƒÆ’Ã‚Â© listo
                        kubectl rollout status deployment/${SERVICE_NAME} -n ${K8S_NAMESPACE} --timeout=180s || echo "ÃƒÂ¢Ã…Â¡Ã‚Â ÃƒÂ¯Ã‚Â¸Ã‚Â ${SERVICE_NAME} no estÃƒÆ’Ã‚Â¡ listo"
                    """
                }
            }
        }
        
        stage('Verify Deployment') {
            when {
                expression { params.SKIP_DEPLOY == false }
            }
            steps {
                script {
                    echo "ÃƒÂ¢Ã…â€œÃ¢â‚¬Â¦ [DEV] Verificando despliegue de ${SERVICE_NAME}..."
                    
                    sh """
                        # Configurar kubectl para Minikube
                        export KUBECONFIG=/var/jenkins_home/.kube/config
                        kubectl config set-cluster minikube --server=https://192.168.67.2:8443 --insecure-skip-tls-verify=true
                        kubectl config use-context minikube
                        
                        echo "ÃƒÂ°Ã…Â¸Ã¢â‚¬Å“Ã…Â  Estado de pods:"
                        kubectl get pods -n ${K8S_NAMESPACE} -l app=${SERVICE_NAME}
                        
                        echo "ÃƒÂ°Ã…Â¸Ã¢â‚¬Å“Ã…Â  Estado de servicios:"
                        kubectl get svc -n ${K8S_NAMESPACE} ${SERVICE_NAME}
                        
                        POD_STATUS=\$(kubectl get pods -n ${K8S_NAMESPACE} -l app=${SERVICE_NAME} -o jsonpath='{.items[0].status.phase}' 2>/dev/null || echo 'NotFound')
                        echo "Estado del pod: \$POD_STATUS"
                        
                        if [ "\$POD_STATUS" = "Running" ]; then
                            echo "ÃƒÂ¢Ã…â€œÃ¢â‚¬Â¦ ${SERVICE_NAME} estÃƒÆ’Ã‚Â¡ corriendo correctamente en Minikube"
                        else
                            echo "ÃƒÂ¢Ã…Â¡Ã‚Â ÃƒÂ¯Ã‚Â¸Ã‚Â WARNING: ${SERVICE_NAME} no estÃƒÆ’Ã‚Â¡ en estado Running"
                            exit 1
                        fi
                    """
                }
            }
        }
        
        stage('Integration Tests') {
            when {
                expression { params.SKIP_TESTS == false && params.SKIP_DEPLOY == false }
            }
            steps {
                script {
                    echo "ÃƒÂ°Ã…Â¸Ã¢â‚¬ÂÃ¢â‚¬â€ [DEV] Ejecutando pruebas de integraciÃƒÆ’Ã‚Â³n..."
                    dir('tests/integration') {
                        sh '''
                            if [ -f pom.xml ]; then
                                # Configurar URLs de servicios en Minikube
                                export USER_SERVICE_URL="http://user-service.ecommerce-dev:8700"
                                export ORDER_SERVICE_URL="http://order-service.ecommerce-dev:8300"
                                export PRODUCT_SERVICE_URL="http://product-service.ecommerce-dev:8500"
                                
                                mvn test -Dtest=*IntegrationTest || echo "ÃƒÂ¢Ã…Â¡Ã‚Â ÃƒÂ¯Ã‚Â¸Ã‚Â Algunas pruebas de integraciÃƒÆ’Ã‚Â³n fallaron"
                            else
                                echo "ÃƒÂ¢Ã¢â‚¬Å¾Ã‚Â¹ÃƒÂ¯Ã‚Â¸Ã‚Â No hay pruebas de integraciÃƒÆ’Ã‚Â³n configuradas"
                            fi
                        '''
                    }
                }
            }
        }
        
                
        stage('Generate Reports') {
            steps {
                script {
                    echo " [DEV] Generando reportes de ${SERVICE_NAME}..."
                    
                    // Archivar artefactos
                    archiveArtifacts artifacts: 'order-service/target/*.jar', fingerprint: true, allowEmptyArchive: true
                    
                    echo " [DEV] Artefactos archivados"
                }
            }
        }
    }
    
    post {
        always {
            echo "ÃƒÂ°Ã…Â¸Ã‚Â§Ã‚Â¹ [DEV] Limpiando workspace..."
            cleanWs()
        }
        success {
            echo """
            ÃƒÂ¢Ã…â€œÃ¢â‚¬Â¦ ========================================
            ÃƒÂ¢Ã…â€œÃ¢â‚¬Â¦ Pipeline DEV de ${SERVICE_NAME} completado
            ÃƒÂ¢Ã…â€œÃ¢â‚¬Â¦ ========================================
            ÃƒÂ°Ã…Â¸Ã¢â‚¬Å“Ã‚Â¦ Imagen: ${IMAGE_NAME}:dev-${BUILD_TAG}
            ÃƒÂ¢Ã‹Å“Ã‚Â¸ÃƒÂ¯Ã‚Â¸Ã‚Â  Namespace: ${K8S_NAMESPACE}
            ÃƒÂ°Ã…Â¸Ã…Â½Ã‚Â¯ Ambiente: Minikube (Local)
            ÃƒÂ¢Ã…â€œÃ¢â‚¬Â¦ ========================================
            """
        }
        failure {
            echo "ÃƒÂ¢Ã‚ÂÃ…â€™ Pipeline DEV de ${SERVICE_NAME} fallÃƒÆ’Ã‚Â³"
        }
    }
}
